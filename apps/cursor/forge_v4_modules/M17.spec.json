  "outputs": { "artifact_type": "bundle", "fields": [ { "name": "shots", "type": "array", "required": true }, { "name": "audio_notes", "type": "markdown", "required": false }, { "name": "export", "type": "json", "required": true } ] },
  "kpi": { "score_min": 80 },
  "tests": [ { "id": "M17-T1", "name": "Shots + export", "input": { "custom": { "storyboard": ["a","b","c"], "look_and_feel": "cinematic", "constraints": ["no defamation"] } }, "assert": { "schema_ok": true, "output_spec_complete": true, "kpi_min": 80 } } ],
  "guardrails": { "privacy_safe": true, "respect_style": true, "no_unfounded_claims": true },
  "deps": [],
  "evaluation_hooks": ["clarity", "execution", "ambiguity", "business_fit"],
  "telemetry_keys": ["run_id", "model", "tokens_in", "tokens_out", "scores", "policy_hits"]
}


