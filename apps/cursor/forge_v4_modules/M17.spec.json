{
  "module_code": "M17",
  "vector": 3,
  "name": "Preseturi Sora (shot‑by‑shot)",
  "purpose": "Prompturi video pe cadru, cu timing și mișcări de cameră, export pentru Sora.",
  "tags": ["sora", "video", "prompt"],
  "status": "stable",
