  "outputs": { "artifact_type": "bundle", "fields": [ { "name": "replies", "type": "markdown", "required": true }, { "name": "evidence", "type": "json", "required": true } ] },
  "kpi": { "score_min": 80 },
  "tests": [ { "id": "M28-T1", "name": "Replies + evidence", "input": { "custom": { "objections": ["a","b","c"], "evidence": ["1","2","3"], "polite_zero": true } }, "assert": { "schema_ok": true, "output_spec_complete": true, "kpi_min": 80 } } ],
  "guardrails": { "privacy_safe": true, "respect_style": true, "no_unfounded_claims": true },
  "deps": [],
  "evaluation_hooks": ["clarity", "execution", "ambiguity", "business_fit"],
  "telemetry_keys": ["run_id", "model", "tokens_in", "tokens_out", "scores", "policy_hits"]
}


