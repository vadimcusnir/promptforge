{
  "module_code": "M01",
  "vector": "Strategic",
  "name": "AI‑IDEI.SOPFORGE™",
  "purpose": "Transformă un subiect definit în SOP standardizat, cu telemetrie și criterii de acceptare, printr-un pipeline multi‑agent (research → validare → procedură → QA).",
  "tags": [
    "sop",
    "research",
    "procedures",
    "multi-agent"
  ],
  "status": "stable",
  "semver": "0.1.0",
  "inputs": {
    "sevenD_contract": {
      "required": [
        "domain",
        "output"
      ],
      "output_must_be_one_of": [
        "bundle",
        "md",
        "json",
        "pdf"
      ]
    },
    "schema": {
      "type": "object",
      "required": [
        "subject",
        "level",
        "context",
        "format",
        "language",
        "deadline",
        "budget",
        "sources"
      ],
      "properties": {
        "subject": {
          "type": "string",
          "minLength": 8,
          "description": "Tema SOP (subiect operațional clar)"
        },
        "level": {
          "type": "string",
          "enum": [
            "basic",
            "intermediate",
            "advanced"
          ],
          "default": "intermediate"
        },
        "context": {
          "type": "string",
          "minLength": 8
        },
        "format": {
          "type": "string",
          "enum": [
            "md",
            "pdf",
            "bundle"
          ],
          "default": "bundle"
        },
        "language": {
          "type": "string",
          "enum": [
            "en",
            "ro"
          ],
          "default": "en"
        },
        "deadline": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "YYYY-MM-DD"
        },
        "budget": {
          "type": "string",
          "minLength": 1
        },
        "sources": {
          "type": "array",
          "minItems": 6,
          "items": {
            "type": "object",
            "required": [
              "url",
              "author",
              "date"
            ],
            "properties": {
              "url": {
                "type": "string"
              },
              "author": {
                "type": "string"
              },
              "date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
              }
            }
          }
        }
      }
    },
    "example": {
      "subject": "Onboarding automatizat pentru clienți enterprise",
      "level": "advanced",
      "context": "SaaS B2B, echipă de 10, timeline 30 zile",
      "format": "bundle",
      "language": "en",
      "deadline": "2025-09-15",
      "budget": "< $10k",
      "sources": [
        { "url": "https://example.com/a", "author": "Autor A", "date": "2025-07-01" },
        { "url": "https://example.com/b", "author": "Autor B", "date": "2025-07-02" },
        { "url": "https://example.com/c", "author": "Autor C", "date": "2025-07-03" },
        { "url": "https://example.com/d", "author": "Autor D", "date": "2025-07-04" },
        { "url": "https://example.com/e", "author": "Autor E", "date": "2025-07-05" },
        { "url": "https://example.com/f", "author": "Autor F", "date": "2025-07-06" }
      ]
    }
  },
  "outputs": {
    "artifact_type": "bundle",
    "fields": [
      {
        "name": "sop_md",
        "type": "markdown",
        "required": true,
        "minLength": 200
      },
      {
        "name": "sop_json",
        "type": "json",
        "required": true
      },
      {
        "name": "checklist",
        "type": "markdown",
        "required": true
      },
      {
        "name": "sources",
        "type": "array",
        "required": true
      },
      {
        "name": "metrics",
        "type": "json",
        "required": true
      }
    ],
    "example": "# SOP — Onboarding Enterprise\n\n## Scope\n...\n"
  },
  "kpi": {
    "score_min": 80,
    "tta_text_s": 60,
    "tta_sop_s": 300,
    "weights": {
      "clarity": 0.25,
      "execution": 0.25,
      "ambiguity": 0.25,
      "business_fit": 0.25
    }
  },
  "tests": [
    {
      "id": "M01-T1",
      "name": "Spec complet + validare output",
      "input": {
        "custom": {
          "subject": "Onboarding automatizat pentru clienți enterprise",
          "level": "advanced",
          "context": "SaaS B2B, echipă de 10, timeline 30 zile",
          "format": "bundle",
          "language": "en",
          "deadline": "2025-09-15",
          "budget": "< $10k",
          "sources": []
        }
      },
      "assert": {
        "schema_ok": true,
        "output_spec_complete": true,
        "kpi_min": 80,
        "no_promises": true,
        "facts_grounded": true,
        "contains": [
          "SOP",
          "Checklist"
        ]
      }
    }
  ],
  "guardrails": {
    "no_promises": true,
    "no_unfounded_claims": true,
    "privacy_safe": true,
    "confidentiality": true,
    "respect_style": true,
    "style_rules": [
      "ton audit-like, fără superlative absolute",
      "citează surse cu autor și dată",
      "verifică factualitatea la fiecare pas"
    ]
  },
  "deps": [],
  "evaluation_hooks": [
    "clarity",
    "execution",
    "ambiguity",
    "business_fit"
  ],
  "telemetry_keys": [
    "run_id",
    "model",
    "tokens_in",
    "tokens_out",
    "scores",
    "policy_hits"
  ]
}


