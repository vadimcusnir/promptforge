{
  "parameter": "urgency",
  "description": "Nivel de presiune execuțională - determină directivitatea, thoroughness și fall-back strategies",

  "values": {
    "low": {
      "label": "Low Urgency",
      "description": "Timp abundent, focus pe explorare și optimizare",
      "directness": "exploratory, comprehensive analysis",
      "safety_level": "relaxed, experimental approach allowed",
      "fallback_strategy": "multiple options, detailed comparison",
      "timeline": "luni/trimestre",
      "characteristics": ["thorough research", "multiple iterations", "comprehensive testing"]
    },

    "planned": {
      "label": "Planned",
      "description": "Timeline normal de business, execuție structurată",
      "directness": "structured approach, balanced analysis",
      "safety_level": "standard precautions, best practices",
      "fallback_strategy": "primary + backup plan",
      "timeline": "săptămâni/luni",
      "characteristics": ["standard methodology", "documented process", "regular checkpoints"]
    },

    "sprint": {
      "label": "Sprint",
      "description": "Deadline aproape, focus pe livrare rapidă",
      "directness": "action-oriented, prioritized tasks",
      "safety_level": "calculated risks, rapid validation",
      "fallback_strategy": "quick pivot options",
      "timeline": "zile/săptămâni",
      "characteristics": ["rapid execution", "MVP approach", "daily check-ins"]
    },

    "pilot": {
      "label": "Pilot/Test",
      "description": "Experiment cu timeline strâns, învățare rapidă",
      "directness": "hypothesis-driven, experiment design",
      "safety_level": "controlled risk, limited scope",
      "fallback_strategy": "quick termination criteria",
      "timeline": "zile/săptămâni",
      "characteristics": ["experiment design", "rapid feedback loops", "fail-fast mentality"]
    },

    "crisis": {
      "label": "Crisis Mode",
      "description": "Situație de urgență, zero toleranță pentru ambiguitate",
      "directness": "extremely direct, no ambiguity tolerance",
      "safety_level": "maximum precautions, escalation paths",
      "fallback_strategy": "multiple contingencies, human oversight",
      "timeline": "ore/zile",
      "characteristics": ["zero ambiguity", "immediate action", "escalation procedures"]
    }
  },

  "adaptation_rules": {
    "language_style": {
      "low": "exploratory, \"consider...\", \"you might explore...\"",
      "planned": "structured, \"follow these steps...\", \"implement systematically...\"",
      "sprint": "actionable, \"prioritize...\", \"execute immediately...\"",
      "pilot": "experimental, \"test whether...\", \"validate the hypothesis...\"",
      "crisis": "directive, \"execute now\", \"immediate action required\""
    },

    "detail_level": {
      "low": "comprehensive analysis, multiple scenarios",
      "planned": "sufficient detail for execution, documented process",
      "sprint": "essential details only, focus on critical path",
      "pilot": "experiment parameters, success/failure criteria",
      "crisis": "essential instructions only, clear escalation paths"
    },

    "risk_tolerance": {
      "low": "risk-averse, thorough validation",
      "planned": "balanced risk, standard validation",
      "sprint": "acceptable risk for speed",
      "pilot": "controlled risk for learning",
      "crisis": "minimum necessary risk, maximum safety"
    },

    "fallback_requirements": {
      "low": "optional, multiple alternatives provided",
      "planned": "recommended, primary + backup approach",
      "sprint": "essential, quick pivot options",
      "pilot": "mandatory, experiment termination criteria",
      "crisis": "critical, multiple contingencies + escalation"
    }
  },

  "override_rules": {
    "crisis_mode_overrides": {
      "description": "Crisis mode activează reguli speciale",
      "rules": [
        "clarity_threshold: >=90 (vs normal >=80)",
        "ambiguity_tolerance: <=10 (vs normal <=20)",
        "mandatory_escalation_paths: true",
        "human_review_required: true pentru domain=healthcare|fintech|legal"
      ]
    }
  }
}
