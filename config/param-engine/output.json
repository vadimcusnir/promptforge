{
  "parameter": "output_format",
  "description": "Format final al artefactului - determină structura, presentation și delivery method",
  
  "values": {
    "txt": {
      "label": "Plain Text",
      "description": "Text simplu, fără formatare, maximum portability",
      "characteristics": "simple, portable, copy-paste friendly",
      "use_cases": ["email content", "simple instructions", "basic documentation"],
      "entitlement_level": "free",
      "file_extension": ".txt",
      "max_length": "2000 characters",
      "structure": "linear narrative, bullet points, minimal formatting"
    },
    
    "md": {
      "label": "Markdown",
      "description": "Markdown cu structure, headers, links, tables",
      "characteristics": "structured, readable, version control friendly",
      "use_cases": ["documentation", "reports", "structured guides"],
      "entitlement_level": "creator", 
      "file_extension": ".md",
      "max_length": "10000 characters",
      "structure": "headers, sections, tables, code blocks, links"
    },
    
    "checklist": {
      "label": "Actionable Checklist",
      "description": "Listă actionable cu checkboxes, priorități, dependencies",
      "characteristics": "actionable, trackable, execution-focused",
      "use_cases": ["task management", "implementation guidance", "quality assurance"],
      "entitlement_level": "creator",
      "file_extension": ".md",
      "max_length": "5000 characters", 
      "structure": "- [ ] checkbox items, priorities, sub-tasks, notes"
    },
    
    "spec": {
      "label": "Technical Specification",
      "description": "Specificație tehnică detaliată cu secțiuni standard",
      "characteristics": "comprehensive, technical, implementation-ready",
      "use_cases": ["system design", "project specifications", "technical requirements"],
      "entitlement_level": "creator",
      "file_extension": ".md",
      "max_length": "15000 characters",
      "structure": "Overview, Requirements, Architecture, Implementation, Testing, Deployment"
    },
    
    "playbook": {
      "label": "Operational Playbook", 
      "description": "Ghid operațional cu procese, tools, best practices",
      "characteristics": "operational, process-oriented, team-ready",
      "use_cases": ["team procedures", "operational guides", "standard operating procedures"],
      "entitlement_level": "creator",
      "file_extension": ".md",
      "max_length": "12000 characters",
      "structure": "Process Overview, Step-by-Step Procedures, Tools & Resources, Troubleshooting"
    },
    
    "json": {
      "label": "Structured JSON",
      "description": "Date structurate în JSON pentru integrare/automatizare",
      "characteristics": "structured, machine-readable, integration-ready",
      "use_cases": ["API integration", "configuration files", "data exchange"],
      "entitlement_level": "pro",
      "file_extension": ".json",
      "max_length": "20000 characters",
      "structure": "hierarchical data structure, standardized schema"
    },
    
    "yaml": {
      "label": "YAML Configuration",
      "description": "Configurație YAML pentru DevOps și automatizare",
      "characteristics": "human-readable configuration, DevOps-friendly",
      "use_cases": ["CI/CD pipelines", "infrastructure as code", "configuration management"],
      "entitlement_level": "pro",
      "file_extension": ".yml",
      "max_length": "15000 characters",
      "structure": "nested configuration, comments, environment variables"
    },
    
    "diagram": {
      "label": "Visual Diagram",
      "description": "Diagramă vizuală (Mermaid/ASCII) pentru arhitectură",
      "characteristics": "visual, architectural, relationship-focused",
      "use_cases": ["system architecture", "process flows", "relationship mapping"],
      "entitlement_level": "pro",
      "file_extension": ".md",
      "max_length": "8000 characters",
      "structure": "Mermaid diagrams, ASCII art, visual representations"
    },
    
    "bundle": {
      "label": "Complete Bundle",
      "description": "Bundle complet cu multiple formate + manifest",
      "characteristics": "comprehensive, multi-format, enterprise-ready",
      "use_cases": ["enterprise delivery", "complete documentation", "audit packages"],
      "entitlement_level": "enterprise",
      "file_extension": ".zip",
      "max_length": "unlimited",
      "structure": "multiple files, manifest.json, checksums, signatures"
    }
  },
  
  "entitlement_gating": {
    "free": ["txt"],
    "creator": ["txt", "md", "checklist", "spec", "playbook"],
    "pro": ["txt", "md", "checklist", "spec", "playbook", "json", "yaml", "diagram"],
    "enterprise": ["txt", "md", "checklist", "spec", "playbook", "json", "yaml", "diagram", "bundle"]
