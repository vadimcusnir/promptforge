# PromptForge Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# VERCEL DEPLOYMENT (for CI/CD workflows)
# =============================================================================
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_org_id_here
VERCEL_PROJECT_ID=your_project_id_here

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# STRIPE BILLING CONFIGURATION
# =============================================================================
STRIPE_SECRET=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Stripe Price IDs for different plans
STRIPE_PILOT_MONTHLY_PRICE_ID=price_pilot_monthly_here
STRIPE_PILOT_ANNUAL_PRICE_ID=price_pilot_annual_here
STRIPE_CREATOR_MONTHLY_PRICE_ID=price_creator_monthly_here
STRIPE_CREATOR_ANNUAL_PRICE_ID=price_creator_annual_here
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_here
STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual_here
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_here
STRIPE_ENTERPRISE_ANNUAL_PRICE_ID=price_enterprise_annual_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_SITE_NAME=PromptForge_v3
NEXT_PUBLIC_ENV=development

# Feature flags
COMING_SOON=false
AGENTS_ENABLED=true
NEXT_PUBLIC_MOTION=on

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_PASSWORD=your_admin_password_here

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================
EXPORT_WATERMARK_TRIAL=TRIAL â€” Not for Redistribution

